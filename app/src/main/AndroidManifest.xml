<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.atob.daekiri">

    <!--인터넷 권한-->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--갤러리 권한에 사용 -->
    <!-- 저장소 쓰기 권한-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 저장소 읽기 권한-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!--카메라 권한 -->
    <uses-permission android:name="android.permission.CAMERA"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hackathon">


        <activity android:name="com.atob.daekiri.Activity.ProfileModificationActivity"/>
        <activity android:name="com.atob.daekiri.Activity.MateSelectionActivity"/>
        <activity android:name="com.atob.daekiri.Activity.TeachSelectionActivity"/>
        <activity android:name="com.atob.daekiri.Activity.LearnSelectionActivity" />
        <activity android:name="com.atob.daekiri.Activity.UserPermissionErrorActivity"/>
        <activity android:name="com.atob.daekiri.Activity.UserPermissionRejectionActivity"/>
        <activity android:name="com.atob.daekiri.Activity.UserPermissionActivity"/>
        <activity android:name="com.atob.daekiri.Activity.UserInfoActivity"/>
        <activity android:name="com.atob.daekiri.Activity.CreateAccountActivity"/>
        <activity android:name="com.atob.daekiri.Activity.LoginActivity"/>
        <activity android:name="com.atob.daekiri.Activity.MainActivity"/>
        <activity android:name="com.atob.daekiri.Activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    </application>


</manifest>