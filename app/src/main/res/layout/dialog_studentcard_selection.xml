<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_studentcard_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_stroke"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/dialog_studentcard_camera"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/applesdgothicneob"
            android:gravity="center"
            android:padding="15dp"
            android:text="카메라"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <View
            android:background="@color/lightGray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/dialog_studentcard_gallery"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/applesdgothicneob"
            android:gravity="center"
            android:padding="15dp"
            android:text="갤러리"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/dialog_studentcard_cancel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_stroke"
        android:fontFamily="@font/applesdgothicneob"
        android:gravity="center"
        android:padding="15dp"
        android:text="취소"
        android:textColor="#3592C4"
        android:textSize="15sp"/>


</LinearLayout>

