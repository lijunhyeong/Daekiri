<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/SignUpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/applesdgothicneob"
        android:text="회원가입"
        android:textColor="@color/MyColor"
        android:textColorHint="@color/darkGray"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/edittext_stroke"
        android:fontFamily="@font/applesdgothicneom"
        android:hint="이메일"
        android:padding="7dp"
        android:textColorHint="@color/darkGray"
        android:textCursorDrawable="@drawable/edittext_cursor"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/SignUpTextView"
        app:layout_constraintStart_toStartOf="@id/SignUpTextView"
        app:layout_constraintTop_toBottomOf="@id/SignUpTextView"
        app:layout_constraintWidth_percent="0.6" />


    <EditText
        android:id="@+id/passwordCheckEditText"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/edittext_stroke"
        android:fontFamily="@font/applesdgothicneom"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:padding="7dp"
        android:textColorHint="@color/darkGray"
        android:textCursorDrawable="@drawable/edittext_cursor"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/emailEditText"
        app:layout_constraintStart_toStartOf="@id/emailEditText"
        app:layout_constraintTop_toBottomOf="@id/emailEditText"
        app:layout_constraintWidth_percent="0.6" />

    <EditText
        android:id="@+id/passwordCheckEditText2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/edittext_stroke"
        android:fontFamily="@font/applesdgothicneom"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:padding="7dp"
        android:textColorHint="@color/darkGray"
        android:textCursorDrawable="@drawable/edittext_cursor"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/passwordCheckEditText"
        app:layout_constraintStart_toStartOf="@id/passwordCheckEditText"
        app:layout_constraintTop_toBottomOf="@id/passwordCheckEditText"
        app:layout_constraintWidth_percent="0.6" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_mycolor_radius"
        android:fontFamily="@font/applesdgothicneom"
        android:onClick="createAccountCompleted"
        android:text="환영해요"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/passwordCheckEditText2"
        app:layout_constraintStart_toStartOf="@id/passwordCheckEditText2"
        app:layout_constraintTop_toBottomOf="@id/passwordCheckEditText2"
        app:layout_constraintWidth_percent="0.6" />


</androidx.constraintlayout.widget.ConstraintLayout>